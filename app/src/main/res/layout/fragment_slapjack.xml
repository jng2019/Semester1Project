<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_slapjack_slap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:text=""
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_slapjack_robotDeck"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/purple_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_slapjack_leftCard"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:rotation="-10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_slapjack_slap"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="@+id/button_slapjack_slap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_slapjack_middleCard"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="@+id/button_slapjack_slap"
        app:layout_constraintEnd_toEndOf="@+id/button_slapjack_slap"
        app:layout_constraintStart_toStartOf="@+id/button_slapjack_slap"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_slapjack_rightCard"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:rotation="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_slapjack_slap"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="@+id/button_slapjack_slap"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView_slapjack_playerDeck"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/purple_back"
        app:layout_constraintBottom_toBottomOf="@+id/button_slapjack_slap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_slapjack_robotCardsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="317dp"
        android:layout_marginBottom="630dp"
        android:text="@string/robotCardsLeft"
        app:layout_constraintBottom_toBottomOf="@+id/button_slapjack_slap"
        app:layout_constraintEnd_toEndOf="@+id/button_slapjack_slap"
        app:layout_constraintStart_toStartOf="@+id/button_slapjack_slap"
        app:layout_constraintTop_toTopOf="@+id/button_slapjack_slap"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_slapjack_playerCardsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="317dp"
        android:layout_marginBottom="85dp"
        android:text="@string/playerCardsLeft"
        app:layout_constraintBottom_toBottomOf="@+id/button_slapjack_slap"
        app:layout_constraintEnd_toEndOf="@+id/button_slapjack_slap"
        app:layout_constraintStart_toStartOf="@+id/button_slapjack_slap"
        app:layout_constraintTop_toTopOf="@+id/button_slapjack_slap"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_slapjack_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="228dp"
        android:layout_marginBottom="484dp"
        android:text="@string/turn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>